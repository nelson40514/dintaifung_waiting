  },
  "dependencies": {
    "@line/bot-sdk": "^9.5.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  }
}
